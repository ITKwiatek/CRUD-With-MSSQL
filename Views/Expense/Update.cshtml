@model InAndOut.Models.Expense

<form method="post" asp-action="UpdatePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Expense</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="ExpenseName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="ExpenseAmount"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="ExpenseName"  class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="ExpenseAmount"  class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-success w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a class="btn btn-primary w-75" asp-controller="Expense" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}